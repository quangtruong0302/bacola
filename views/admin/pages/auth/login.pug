include ../../mixins/form-alert.pug
doctype html
html
  head
    title Đăng Nhập
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css')
    link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css')
    link(rel='stylesheet' href='/styles.css')
  body
    - if (messages.messageError)
      +form-alert-error(messages.messageError)
    .container-fluid
      .row.vh-100
        .col-md-7.p-0
          img.img-fluid.w-100.h-100(src='/admin/images/web-account-login.png' alt='Hình ảnh đăng nhập' style='object-fit: cover; padding: 150px')
        .col-md-5.d-flex.align-items-center.justify-content-center
          .login-form.p-5.shadow.rounded(style='width: 80%; max-width: 400px;')
            h2.text-center.mb-4 Đăng Nhập
            form(action='/administrator/auth/login' method='POST')
              .mb-3
                label.form-label(for='email') Email
                .input-group
                  span.input-group-text
                    i.fa-solid.fa-envelope
                  input#username.form-control(type='text' name='email' required)
              .mb-3
                label.form-label(for='password') Mật khẩu
                .input-group
                  span.input-group-text
                    i.fas.fa-lock
                  input#password.form-control(type='password' name='password' required)
              button.btn.btn-primary.w-100(type='submit') Đăng Nhập